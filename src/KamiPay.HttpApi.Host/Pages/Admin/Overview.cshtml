@page
@using Microsoft.Extensions.Localization
@using KamiPay.Pages.Admin
@model KamiPay.Pages.Admin.OverviewModel
@inject IStringLocalizer<OverviewModel> L
@{
    Layout = "Shared/_AdminLayout";

    ViewData["PageTitle"] = L["PageTitle"];
    ViewData["PageName"] = "Overview";
}
<div class="card">
    <div class="card-header border-bottom">
        <h4 class="card-header-title">@L["BasicInfo"]</h4>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="row mb-4">
                <label class="col-sm-3 col-form-label form-label">@L["ProfilePhoto"]</label>
                <div class="col-sm-9">
                    <div class="d-flex align-items-center">
                        <label class="avatar avatar-xl avatar-circle" for="avatarUploader">
                            <img id="avatar-image" class="avatar-img" src="~/images/kamipay.jpg" alt="Profile picture">
                        </label>
                        <div class="d-grid d-sm-flex gap-2 ms-4">
                            <div class="form-attachment-btn btn btn-primary btn-sm">
                                @L["UploadPhoto"]
                                <input type="file" class="js-file-attach form-attachment-btn-label" id="avatarUploader"
                                       data-hs-file-attach-options='{"textTarget": "#avatar-image", "mode": "image", "targetAttr": "src", "resetTarget": ".reset-btn", "resetImg": "/images/kamipay.jpg", "allowTypes": [".png", ".jpeg", ".jpg"]}'>
                            </div>
                            <button type="button" class="reset-btn btn btn-white btn-sm">@L["Delete"]</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mb-4">
                <label class="col-sm-3 col-form-label form-label" asp-for="UpdateProfileInput.UserName"></label>
                <div class="col-sm-9">
                    <input type="text" class="form-control"
                           required
                           placeholder='@L["UserNameTip"]'
                           aria-label='@L["UserNameTip"]'
                           value=""
                           asp-for="UpdateProfileInput.UserName">
                </div>
            </div>
            <div class="row mb-4">
                <label asp-for="UpdateProfileInput.Name" class="col-sm-3 col-form-label form-label">@L["FullName"]</label>
                <div class="col-sm-9">
                    <div class="input-group">
                        <input type="text" class="form-control"
                               placeholder='@L["FirstNameTip"]'
                               aria-label='@L["FirstNameTip"]'
                               asp-for="UpdateProfileInput.Name">
                        <input type="text" class="form-control"
                               placeholder='@L["LastNameTip"]'
                               aria-label='@L["LastNameTip"]'
                               asp-for="UpdateProfileInput.Surname">
                    </div>
                </div>
            </div>
            <div class="row mb-4">
                <label class="col-sm-3 col-form-label form-label" asp-for="UpdateProfileInput.Email"></label>
                <div class="col-sm-9">
                    <input type="email" class="form-control"
                           placeholder='@L["EmailAddressTip"]'
                           aria-label='@L["EmailAddressTip"]'
                           asp-for="UpdateProfileInput.Email">
                    <input type="hidden" asp-for="UpdateProfileInput.ConcurrencyStamp"/>
                </div>
            </div>
        </form>
    </div>
    <div class="card-footer pt-0">
        <div class="d-flex justify-content-end gap-3">
            <button type="submit" class="btn btn-white">@L["Cancel"]</button>
            <button type="submit" class="btn btn-primary">@L["SaveChanges"]</button>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header border-bottom">
        <h5 class="card-header-title">@L["Password"]</h5>
    </div>
    <div class="card-body">
        <form>
            <div class="row mb-4">
                <label class="col-sm-3 col-form-label form-label" asp-for="UpdatePasswordInput.CurrentPassword"></label>
                <div class="col-sm-9">
                    <input type="password" class="form-control"
                           placeholder='@L["CurrentPasswordTip"]'
                           aria-label='@L["CurrentPasswordTip"]'
                           asp-for="UpdatePasswordInput.CurrentPassword">
                </div>
            </div>
            <div class="row mb-4">
                <label class="col-sm-3 col-form-label form-label" asp-for="UpdatePasswordInput.NewPassword"></label>
                <div class="col-sm-9">
                    <input type="password" class="form-control"
                           placeholder='@L["NewPasswordTip"]'
                           aria-label='@L["NewPasswordTip"]'
                           asp-for="UpdatePasswordInput.NewPassword">
                </div>
            </div>
            <div class="row mb-4">
                <label class="col-sm-3 col-form-label form-label" asp-for="UpdatePasswordInput.ConfirmPassword"></label>
                <div class="col-sm-9">
                    <div class="mb-3">
                        <input type="password" class="form-control"
                               placeholder='@L["ConfirmPasswordTip"]'
                               aria-label='@L["ConfirmPasswordTip"]'
                               asp-for="UpdatePasswordInput.ConfirmPassword">
                    </div>
                    <h5>@L["PasswordRequirements"]</h5>
                    <p class="card-text small">@L["PasswordRequirementsDesc"]</p>
                    <ul class="small">
                        <li>@L["PasswordRequirement1"]</li>
                        <li>@L["PasswordRequirement2"]</li>
                        <li>@L["PasswordRequirement3"]</li>
                        <li>@L["PasswordRequirement4"]</li>
                    </ul>
                </div>
            </div>
            <div class="d-flex justify-content-end gap-3">
                <button type="submit" class="btn btn-white">@L["Cancel"]</button>
                <button type="submit" class="btn btn-primary">@L["SaveChanges"]</button>
            </div>
        </form>
    </div>
</div>